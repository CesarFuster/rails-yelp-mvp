<div class="container">

  <div class="title">
    <h1><strong><%= @restaurant.name %> </strong></h1>
  </div>
  <div class="details">
    <p><%= @restaurant.address.capitalize %> | <%= @restaurant.category.capitalize %></p>
  </div>

  <div class="buttons">
    <div>
      <p><i class="fas fa-edit"></i> <%= link_to "Edit", edit_restaurant_path %></p>
    </div>
    <div>
      <p><i class="fas fa-trash-alt"></i> <%= link_to "Delete", restaurant_path(@restaurant),
      method: :delete,
      data: { confirm: "Are you sure?" } %></p>
    </div>
  </div>

  <div>
    <img src="https://www.theriverside.co.uk/images/Inside-Restaurant.jpg" class="img-rest">
  </div>

  <h3>Reviews</h3>
  <div class="reviews">
    <% @reviews.each do |review| %>
    <p> <%= review.content %> </p>
    <p> <%= review.rating %> </p>
    <% end %>
  </div>

  <h3>Do Your Review</h3>
  <div class="all-reviews">
    <div >
      <%= simple_form_for [@restaurant, @review] do |f| %>
      <%= f.input :content %>
      <%= f.input :rating, collection: [0, 1, 2, 3, 4, 5] %>
      <%= f.submit "Add a Review", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>

  <div class="back-to-all">
    <p><i class="fas fa-arrow-circle-left"></i> <%= link_to "Back to All Restaurants", restaurants_path %></p>
  </div>
</div>




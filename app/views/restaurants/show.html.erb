<div class="container">
  <h1>Restaurant</h1>
  <h2><%= @restaurant.name %></h2>
  <p><%= @restaurant.address %></p>
  <p><%= @restaurant.category %></p>

  <%= link_to "Edit restaurant", edit_restaurant_path %>

  <p><i class="fas fa-trash-alt"></i> <%= link_to "Delete", restaurant_path(@restaurant),
  method: :delete,
  data: { confirm: "Are you sure?" } %></p>

  <% @reviews.each do |review| %>
  <p><%= review.content %></p>
  <p><%= review.rating %></p>
  <% end %>

  <%= simple_form_for [@restaurant, @review] do |f| %>
  <%= f.input :content %>
  <%= f.input :rating, collection: [0, 1, 2, 3, 4, 5] %>
  <%= f.submit "add a review", class: "btn btn-primary" %>
  <% end %>

  <%= link_to "All Restaurants", restaurants_path %>
</div>



